		"@stimulcross/prettier-config": "^1.2.1",
		"@types/node": "^18.6.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.20.0",
		"eslint-import-resolver-lerna": "^2.0.0",
		"eslint-plugin-jsdoc": "^39.3.6",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"lerna": "^5.3.0",
		"lint-staged": "^13.0.3",
		"node-html-parser": "^5.4.2-0",
