{
	"version": "4.0.0-next.3",
	"name": "donation-alerts",
	"repository": "git+https://github.com/StimulCross/donation-alerts.git",
	"author": "Stimul Cross <stimulcross@gmail.com>",
	"license": "MIT",
	"description": "",
	"private": true,
	"packageManager": "pnpm@10.5.2",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"build": "turbo run build",
		"rebuild": "turbo run rebuild",
		"clean": "turbo run clean",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format:check": "prettier --config \".prettierrc.js\" --check packages",
		"format:fix": "prettier --config \".prettierrc.js\" --write packages",
		"prepare": "husky",
		"preversion": "pnpm run rebuild && pnpm run format:check && pnpm run lint",
		"postversion": "pnpm i",
		"prepublishOnly": "pnpm run rebuild && pnpm run format:check && pnpm run lint",
		"docs": "typedoc && node fix-docs.mjs",
		"clean:docs": "rimraf ./docs",
		"test": "jest --config jest.config.js --runInBand --detectOpenHandles --forceExit",
		"test:verbose": "jest --config jest.config.js --runInBand --verbose --detectOpenHandles --forceExit",
		"test:cov": "jest --config jest.config.js --runInBand --coverage --detectOpenHandles --forceExit",
		"test:cov:verbose": "jest --config jest.config.js --runInBand --coverage --verbose --detectOpenHandles --forceExit",
		"common": "pnpm --filter=@donation-alerts/common",
		"api-call": "pnpm --filter=@donation-alerts/api-call",
		"auth": "pnpm --filter=@donation-alerts/auth",
		"api": "pnpm --filter=@donation-alerts/api",
		"events": "pnpm --filter=@donation-alerts/events"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@stimulcross/commitlint-config": "^2.0.0",
		"@stimulcross/eslint-config-base": "^2.0.0",
		"@stimulcross/eslint-config-node": "^2.0.0",
		"@stimulcross/eslint-config-typescript": "^2.0.0",
		"@stimulcross/prettier-config": "^2.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.5",
		"eslint": "^9.21.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lerna": "^8.2.0",
		"lint-staged": "^15.4.3",
		"node-html-parser": "^7.0.1",
		"prettier": "^3.5.2",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"turbo": "^2.4.4",
		"typedoc": "~0.27.9",
		"typescript": "^5.7.3"
	}
}
