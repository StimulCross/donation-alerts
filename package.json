{
	"workspaces": [
		"packages/*"
	],
	"version": "1.0.2",
	"name": "donation-alerts",
	"repository": "git+https://github.com/StimulCross/donation-alerts.git",
	"author": "Stimul Cross <stimulcross@gmail.com>",
	"license": "MIT",
	"description": "",
	"private": true,
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"lint": "eslint --ext js,ts packages",
		"lint:fix": "eslint --ext js,ts packages --fix",
		"format:check": "prettier --config \".prettierrc.js\" --check packages",
		"format:fix": "prettier --config \".prettierrc.js\" --write packages",
		"build": "tsukuru",
		"rebuild": "tsukuru --clean",
		"prepare": "husky install",
		"clean:build": "rimraf ./packages/**/es ./packages/**/lib ./packages/**/tsconfig.tsbuildinfo",
		"clean:docs": "rimraf ./docs",
		"docs": "typedoc"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@stimulcross/commitlint-config": "^1.4.1",
		"@stimulcross/eslint-config-base": "^1.4.1",
		"@stimulcross/eslint-config-node": "^1.4.1",
		"@stimulcross/eslint-config-typescript": "^1.4.1",
		"@stimulcross/prettier-config": "^1.4.1",
		"@types/node": "^18.14.2",
		"cross-env": "^7.0.3",
		"eslint": "^8.35.0",
		"eslint-import-resolver-lerna": "^2.0.0",
		"eslint-plugin-jsdoc": "^40.0.0",
		"husky": "^8.0.3",
		"lerna": "^5.6.2",
		"lint-staged": "^13.1.2",
		"node-html-parser": "^6.1.5",
		"prettier": "^2.8.4",
		"rimraf": "^3.0.2",
		"ts-node": "^10.9.1",
		"tslib": "^2.5.0",
		"tsukuru": "^0.8.0-pre.11",
		"typedoc": "^0.23.26",
		"typedoc-plugin-resolve-crossmodule-references": "^0.3.3",
		"typescript": "~4.9.5"
	}
}
