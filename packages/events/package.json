{
	"name": "@donation-alerts/events",
	"version": "3.0.1",
	"publishConfig": {
		"access": "public"
	},
	"author": "StimulCross <stimulcross@gmail.com>",
	"description": "Listen to various Donation Alerts events.",
	"homepage": "https://github.com/StimulCross/donation-alerts/tree/main/packages/events#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/StimulCross/donation-alerts.git",
		"directory": "packages/events"
	},
	"engines": {
		"node": ">=20"
	},
	"keywords": [
		"donation-alerts",
		"api",
		"donations",
		"tips",
		"events"
	],
	"sideEffects": false,
	"license": "MIT",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/cjs/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/cjs/index.d.ts",
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js",
			"default": "./dist/cjs/index.js"
		}
	},
	"scripts": {
		"build:cjs": "tsc -p tsconfig.build.cjs.json",
		"build:esm": "tsc -p tsconfig.build.esm.json",
		"build": "pnpm run build:cjs && pnpm run build:esm",
		"rebuild": "pnpm run clean && pnpm run build",
		"clean": "rimraf dist"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md",
		"!dist/**/*.d.ts.map",
		"!dist/esm/**/*.d.ts"
	],
	"dependencies": {
		"@d-fischer/isomorphic-ws": "^7.0.0",
		"@d-fischer/typed-event-emitter": "^3.3.2",
		"@donation-alerts/common": "3.0.1",
		"@stimulcross/logger": "^6.0.0",
		"@stimulcross/shared-utils": "^0.2.3",
		"centrifuge": "2.8.5",
		"detect-node": "^2.1.0",
		"typescript-memoize": "^1.1.1",
		"ws": "^8.14.2"
	},
	"peerDependencies": {
		"@donation-alerts/api": "3.0.1"
	},
	"devDependencies": {
		"@donation-alerts/api": "3.0.1",
		"@types/detect-node": "^2.0.1",
		"@types/ws": "^8.5.8",
		"rimraf": "^6.0.1",
		"tslib": "^2.8.1"
	}
}
