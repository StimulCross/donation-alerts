{
	"compilerOptions": {
		"composite": true,
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "node",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"importHelpers": true,
		"strict": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"isolatedModules": true,
		"declarationMap": true
	}
}
